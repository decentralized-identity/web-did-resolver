{
  "name": "web-did-resolver",
  "version": "2.0.4",
  "description": "Resolve DID documents from an https domain",
  "main": "lib/resolver.js",
  "types": "lib/resolver.d.ts",
  "author": "Mike Xu <mike.xu@consensys.net>",
  "license": "Apache-2.0",
  "repository": "git@github.com:decentralized-identity/web-did-resolver.git",
  "dependencies": {
    "cross-fetch": "^3.1.2",
    "did-resolver": "^3.1.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-with-coverage": "jest --coverage && codecov",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "release": "semantic-release --debug"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/jest": "26.0.23",
    "codecov": "3.8.2",
    "jest": "27.0.1",
    "prettier": "2.3.0",
    "regenerator-runtime": "0.13.7",
    "semantic-release": "17.4.3",
    "ts-jest": "27.0.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "4.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "files": [
    "lib/**/*"
  ]
}
